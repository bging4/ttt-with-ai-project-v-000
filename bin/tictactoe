#!/usr/bin/env ruby

require_relative '../config/environment'

puts "Welcome to Tic-Tac-Toe!"
puts "What kind of game do you want to play? You can play with:"
puts "1. 0 players - two computers"
puts "2. 1 player - one human, one computer"
puts "3. 2 players - two humans"
game_type = gets.strip

# If both players are computers
if game_type.include?("1." || "0 players")
    game = Game.new(player_1=Players::Computer.new("X"), player_2=Players::Computer.new("O"), board=Board.new)
# If one player is a computer and one is a human
elsif game_type.include?("2." || "1 player")
  puts "Who should go first and be X: human or computer?"
    first_player = gets.strip
    if first_player.include?("human")
      game = Game.new(player_1=Players::Human.new("X"), player_2=Players::Computer.new("O"), board=Board.new)
    else
      game = Game.new(player_1=Players::Computer.new("X"), player_2=Players::Human.new("O"), board=Board.new)
    end
# If both players are human
elsif game_type.include?("3." || "2 players")
  game = Game.new
# validation
else
  puts "Please pick a valid option!"
end


game.start
